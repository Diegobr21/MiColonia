<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorText"
    tools:context=".Ayuda">

    <com.google.android.material.appbar.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppThemeRegister"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/casa_yellow"
                    android:tint="@android:color/holo_orange_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textsaludo" />

                <TextView
                    android:id="@+id/textsaludo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Ayuda"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_info_aviso_privacidad"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView

                    android:id="@+id/btn_info_aviso_privacidad"
                    android:layout_width="43dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/botoncircular"
                    android:backgroundTint="@android:color/white"
                    android:src="@drawable/ic_info_black_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="520dp"
    android:id="@+id/fragment_container"
    android:layout_margin="5dp"
    >

</FrameLayout>

       
    <LinearLayout       
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

            <ImageButton
                android:id="@+id/izq"
                android:background="@color/naranja"
                android:layout_marginLeft="150dp"
                
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_stat_flechaizq"/>
            <ImageButton
                android:id="@+id/derecha"
                android:layout_marginTop="4dp"
                android:background="@color/naranja"
                android:layout_marginLeft="22dp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_stat_flecha"/>

    </LinearLayout>

</LinearLayout>